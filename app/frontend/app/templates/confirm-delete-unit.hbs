{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Delete this Room" key='delete_this_room'}}</h3>
  </div>
  <div class="modal-body">
    <p>
      {{t "Are you sure you want to delete this room?" key='confirm_delete_room'}}
    </p>
    <strong>{{model.unit.name}}</strong><br/>
    {{t "supervisor" count=model.unit.supervisor_count key='supervisors'}}<br/>
    {{t "communicator" count=model.unit.communicator_count key='communicators'}}
    {{#if model.error}}
      <p class='text-danger'>{{t "There was an error trying to delete the room" key='error_deleting_room'}}</p>
    {{/if}}
  </div>
  <div class="modal-footer">

    <button class='btn btn-primary' {{action 'deleteUnit'}} disabled={{model.deleting}}>
      {{#if model.deleting}}
        {{t "Deleting Room" key='deleting_room'}}
      {{else}}
        {{t "Delete Room" key='delete_room'}}
      {{/if}}
    </button>
    <button class='btn btn-default' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
  </div>
{{/modal-dialog}}

