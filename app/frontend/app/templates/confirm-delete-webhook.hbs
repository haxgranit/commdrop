{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Delete this Event Handler" key='delete_this_event_handler'}}</h3>
  </div>
  <div class="modal-body">
    <p>
      {{t "Are you sure you want to delete this event handler?" key='confirm_delete_event_handler'}}
    </p>
    <strong>{{model.webhook.name}}</strong><br/>
    {{#if model.error}}
      <p class='text-danger'>{{t "There was an error trying to delete the event handler" key='error_deleting_event_handler'}}</p>
    {{/if}}
  </div>
  <div class="modal-footer">
    <button class='btn btn-primary' {{action 'delete_webhook' "delete"}} disabled={{model.deleting}}>
      {{#if model.deleting}}
        {{t "Deleting Event Handler..." key='deleting_event_handler'}}
      {{else}}
        {{t "Delete Event Handler" key='delete_event_handler'}}
      {{/if}}
    </button>
    <button class='btn btn-default' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
  </div>
{{/modal-dialog}}

