<div class="row">
  <div class="col-sm-2 video_buttons">
    {{#if video_preview}}
      <button class='btn btn-default' {{action 'keep'}}><span class='glyphicon glyphicon-ok'></span><span class='sr-only'>{{t "Use This" key='use_this'}}</span></button>
      {{#if video_recording}}
        <button class='btn btn-default' {{action 'setup_recording'}}><span class='glyphicon glyphicon-arrow-left'></span><span class='sr-only'>{{t "Try Again" key='try_again'}}</span></button>
      {{/if}}
      <button class='btn btn-default' {{action 'clear'}}><span class='glyphicon glyphicon-remove'></span><span class='sr-only'>{{t "Start Over" key='start_over'}}</span></button>
    {{else if video_recording}}
      {{#if video_recording.started}}
        <button class='btn btn-default' {{action 'stop'}}><span class='glyphicon glyphicon-stop'></span><span class='sr-only'>{{t "Stop Recording" key='stop_recording'}}</span></button>
        <div style="text-align: center; font-size: 20px;">
          <span class='text-muted'>{{duration time_recording}}</span>
        </div>
      {{else}}
        <button class='btn btn-default' {{action 'record'}}><span class='glyphicon glyphicon-record'></span><span class='sr-only'>{{t "Start Recording" key='start_recording'}}</span></button>
        {{#if webcam.video_streams}}
          <button class='btn btn-default' {{action 'swap'}}><span class='glyphicon glyphicon-repeat'></span><span class='sr-only'>{{t "Switch Views" key='switch_views'}}</span></button>
        {{/if}}
        <button class='btn btn-default' {{action 'clear'}}><span class='glyphicon glyphicon-remove'></span><span class='sr-only'>{{t "Start Over" key='start_over'}}</span></button>
      {{/if}}
    {{else}}
      <button class='btn btn-default' {{action 'setup_recording'}}><span class='glyphicon glyphicon-facetime-video'></span><span class='sr-only'>{{t "Record Video" key='record_video'}}</span></button>
      <span class="file_select_holder">
        <button class='btn btn-default'>
          <img src={{path 'images/upload.svg'}} style='width: 35px; margin: -12px -3px -3px;'/><span class='sr-only'>Upload Video</span>
        </button>
        <input type="file" name="video_upload" id="video_upload" accept="video/*"/>
      </span>
    {{/if}}
  </div>
  <div class="col-sm-10">
    {{#if video_recording.error}}
      <span class='text-danger'>
        {{t "Video recording is supported by this browser" key='video_recording_not_supported'}}
      </span>
    {{else if video_preview.url}}
      <video id='video_elem' controls src={{video_preview.url}} style="width: 100%; border: 1px solid #ccc;"></video>
    {{else if video_recording.video_url}}
      <video id='video_elem' muted src={{video_recording.video_url}} style="width: 100%; border: 1px solid #ccc;"></video>
    {{else}}
      <span class='text-muted'>
        {{t "You can record a video using your device's camera, or upload a pre-recorded video to share." key='video_prompt'}}
      </span>
    {{/if}}
  </div>
</div>
