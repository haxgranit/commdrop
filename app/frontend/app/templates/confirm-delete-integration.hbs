{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Delete this Integration" key='delete_this_integration'}}</h3>
  </div>
  <div class="modal-body">
    <p>
      {{t "Are you sure you want to delete this integration?" key='confirm_delete_integration'}}
    </p>
    <strong>{{model.integration.name}}</strong><br/>
    {{#if model.error}}
      <p class='text-danger'>{{t "There was an error trying to delete the integration" key='error_deleting_integration'}}</p>
    {{/if}}
  </div>
  <div class="modal-footer">
    <button class='btn btn-primary' {{action 'delete_integration' "delete"}} disabled={{model.deleting}}>
      {{#if model.deleting}}
        {{t "Deleting Integration..." key='deleting_integration'}}
      {{else}}
        {{t "Delete Integration" key='delete_integration'}}
      {{/if}}
    </button>
    <button class='btn btn-default' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
  </div>
{{/modal-dialog}}

