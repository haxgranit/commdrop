{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Approve Board Share" key='approve_board_share'}}</h3>
  </div>
  <div class="modal-body">
    <p>{{t "This board, %{board_key} has been shared with you. Would you like to accept this share? Keep in mind that anyone with the same share level as you will be able to see any boards you have created that are linked from this board as well." key='share_warning' board_key=model.board.key}}</p>
    <p>
    <strong>{{t "Shared by:" key='shared_by'}}</strong>
    <ul>
      {{#each model.shares as |share|}}
        <li>{{share.user_name}}{{t ", editing permission on this and downstream boards by any author" key='includes_downstream_editing'}}</li>
      {{/each}}
    </ul>
    </p>
    <div style='margin-top: 20px;'>
      {{#if pending}}
        {{t "Updating share status..." key='updating_share_status'}}
      {{else}}
        <button class='btn btn-primary' {{action 'approve'}}>{{t "Approve This Share" key='approve_share'}}</button>
        <button class='btn btn-default' {{action 'reject'}}>{{t "Reject This Share" key='reject_share'}}</button>
        {{#if error}}
          <p class='text-danger'>{{t "There was an unexpected problem updating the share status"}}</p>
        {{/if}}
      {{/if}}
    </div>
  </div>    
{{/modal-dialog}}
