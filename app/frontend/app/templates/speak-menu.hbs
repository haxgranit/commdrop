{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-body advanced_selection modal_targets" id="speak_menu" style="padding: 0; font-size: 18px;">
    {{#if app_state.feature_flags.new_speak_menu}}
      {{#button-listener button_event='button_event'}}
        <div class='row' style='margin-left: -1px; margin-top: -1px; width: calc(100% + 2px); border-bottom: 1px solid #000;'>
          {{#if repeat_menu}}
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_repeat_quieter'>
              <span class='glyphicon glyphicon-volume-down'></span>
              {{t "Quiet" key='quiet'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button radial radial_on_click' id='menu_repeat_button'>
              <span class='glyphicon glyphicon-arrow-left' style='opacity: 0.7;'></span>
              <span style='opacity: 0.7;'>{{t "Back" key='back'}}</span>
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_repeat_louder'>
              <span class='glyphicon glyphicon-volume-up'></span>
              {{t "Loud" key='loud'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_repeat_text'>
              <span class='glyphicon glyphicon-modal-window'></span>
              {{t "Button" key='Button'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_repeat_flip'>
              <span class='glyphicon glyphicon-repeat'></span>
              {{t "Flip Text" key='flip_text'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_share_button'>
              <span class='glyphicon glyphicon-share'></span>
              {{t "Share" key='share'}}
            </div>
          {{else}}
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_share_button'>
              <span class='glyphicon glyphicon-share'></span>
              {{t "Share" key='share'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button radial radial_on_click' id='menu_repeat_button'>
              <div style='position: absolute; top: 0; right: 0; width: 10px; height: 10px; border: 8px solid #333; border-bottom-left-radius: 15px; '></div>
              <span class='glyphicon glyphicon-volume-up'></span>
              {{t "Repeats" key='repeats'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_repair_button'>
              <span class='glyphicon glyphicon-edit'></span>
              {{t "Repairs" key='repairs'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_inbox_button'>
              {{#if app_state.referenced_user.unread_alerts}}
                <span class='label label-danger unread' style='position: absolute; top: 5px; right: 10px; border-radius: 10px; font-size: 14px;'>{{app_state.referenced_user.unread_alerts}}</span>
              {{/if}}
              <span class='glyphicon glyphicon-inbox'></span>
              {{t "Alerts" key='alerts'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_phrases_button'>
              <span class='glyphicon glyphicon-align-justify'></span>
              {{t "Phrases" key='phrases'}}
            </div>
            <div class='col-sm-2 col-xs-4 speak_menu_button' id='menu_hold_thought_button'>
              <span class='glyphicon glyphicon-pushpin'></span>
              {{t "Hold Thought" key='hold_thought'}}
            </div>
          {{/if}}
        </div>
      {{/button-listener}}
    {{else}}
      <ul class="nav nav-pills nav-stacked">
        <li style="padding: 15px 10px 0; font-size: 14px; color: #888;">
          {{working_vocalization_text}}
        </li>
        <li>
          <a href="#" {{action "selectButton" "remember"}}>{{t "Remember this" key='remember_this'}}</a>
        </li>
        {{#if sharing_allowed}}
          <li>
            <a href="#" {{action "selectButton" "share"}}>{{t "Share this" key='share_this'}}</a>
          </li>
        {{/if}}
        <li>
          <a href="#" {{action "selectButton" "sayLouder"}}>{{t "Say this Louder" key='say_this_louder'}}</a>
        </li>
      </ul>
    {{/if}}
    <ul class="nav nav-pills nav-stacked">
      <li style='text-align: left; float: left; width: 50%;'>
        <a href="#" {{action 'close'}}>{{t "Cancel" key='cancel'}}</a>
      </li>
      {{#if app_state.feature_flags.new_speak_menu}}
        <li style='text-align: right; float: left; width: 50%;'>
          <a href="#" {{action "selectButton" "remember"}}>{{t "Remember this" key="remember_this"}}</a>
        </li>
      {{/if}}
      {{#if app_state.reply_note}}
        <li style='clear: left;'>
          <a href="#" {{action 'reply_note'}}>
            <span id='reply_icon' class='label label-info'><span class='glyphicon glyphicon-envelope'></span></span>
            {{t "Send Reply" key='send_rely'}}
            {{#if app_state.reply_note.author}}
              {{t "to" key='to'}} {{app_state.reply_note.author.name}}
            {{/if}}
          </a>
        </li>
      {{else if app_state.insertion}}
        <li style='clear: left;'>
          <a href="#" {{action 'end_insertion'}}>
            <span id='reply_icon' class='label label-info'><span class='glyphicon glyphicon-console'></span></span>
            {{t "Done Inserting Text" key='done_inserting_text'}}
          </a>
        </li>
      {{else if app_state.flipped}}
        <li style='clear: left;'>
          <a href="#" {{action 'flip_text'}}>
            <span id='reply_icon' class='label label-info'><span class='glyphicon glyphicon-repeat'></span></span>
            {{t "Un-Flip Text" key='unflip_text'}}
          </a>
        </li>
      {{/if}}
      {{#each rememberedUtterances as |utterance|}}

        <li style='clear: left;'>
          <a href="#" {{action "selectButton" utterance}} style='font-size: 13px; height: 55px; padding-top: 15px;'>
            {{#if utterance.stash }}
              {{t "Resume: " key="resume_colon"}} 
            {{else}}
              {{t "Say: " key="say_colon"}} 
            {{/if}}
            <span style='font-size: 18px;'>"{{utterance.sentence}}"</span>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
{{/modal-dialog}}
