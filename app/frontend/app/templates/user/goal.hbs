<h2>{{model.summary}}</h2>
<div class="row">
  <div class="col-sm-3 col-xs-2">
    <div class="panel panel-default summary smaller">
      <div class="panel-heading">{{t "State" key='state'}}</div>
      <div class="panel-body">
        {{#if model.active}}
          {{#if model.primary}}
            {{t "Primary Goal" key='primary_goal'}}
          {{else}}
            {{t "Secondary Goal" key='secondary_goal'}}
          {{/if}}
        {{else}}
          {{t "Past Goal" key='past_goal'}}
        {{/if}}

        <br/>
        <span class='text-muted'>
          {{#if model.active}}
            {{t "started" key='started'}}
          {{else}}
            {{t "ended" key='ended'}}
          {{/if}}
          {{#if model.active}}
            {{date model.started 'day'}}
          {{else}}
            {{date model.ended 'day'}}
          {{/if}}
        </span>
      </div>
    </div>
  </div>
  <div class="col-sm-3 col-xs-2">
    <div class="panel panel-default summary smaller">
      <div class="panel-heading">{{t "Author" key='author'}}</div>
      <div class="panel-body" style='line-height: 44px;'>
        {{#link-to 'user' model.author.user_name}}{{model.author.user_name}}{{/link-to}}
      </div>
    </div>
  </div>
  <div class="col-sm-3 col-xs-2">
    <div class="panel panel-default summary smaller">
      <div class="panel-heading">{{t "Average" key='average_success'}}</div>
      <div class="panel-body">
        {{model.stats.weighted_percent_positive}}%
        {{t "weighted" key='weighted'}}
        <br/>
        <span class='text-muted'>
          {{model.stats.weighted_average_status}}
          {{t "weighted status" key='weighted_status'}}
        </span>
      </div>
    </div>
  </div>
  <div class="col-sm-3 col-xs-2">
    <div class="panel panel-default summary smaller">
      <div class="panel-heading">{{t "Total Sessions" key='total_sessions'}}</div>
      <div class="panel-body" style='line-height: 44px;'>
        {{t "session" key='sessions' count=model.stats.sessions}}
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    {{stats/goal-statuses-over-time goal=model}}
  </div>
  <div class="col-sm-6">
    {{stats/goal-summary goal=model}}
  </div>
</div>
<p>{{model.description}}</p>
<h3>{{t "Comments" key='comments'}}</h3>
<p>{{t "No Comments" key='no_comments'}}</p>
<button class='btn btn-default'>{{t "Add Comment" key='add_comment'}}</button>
<h3>{{t "Notes and Assessments" key='notes_and_assessments'}}</h3>
<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th style="width: 10px;">{{t "Type" key='type'}}</th>
        <th>{{t "Summary" key='summary'}}</th>
        <th style="width: 20%;">{{t "Date" key='date'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.processed_events as |event|}}
        <tr class={{if event.long_delay 'long_delay'}}>
          <td>
            <span class={{event.type_class}} title={{event.type}}>
              <span class="sr-only">{{event.type}}</span>
            </span>
            {{#if event.spoken}}
              <span class="glyphicon glyphicon-volume-up">
                <span class="sr-only">{{t "spoken" key='spoken'}}</span>
              </span>
            {{/if}}
          </td>
          <td>
            <span class={{event.part_of_speech_class}} title={{event.part_of_speech}}>
              <span class="sr-only">{{event.part_of_speech}}</span>
            </span>
            <span class={{if event.button_type '' 'text-muted'}}>
              {{event.summary}}
            </span>
          </td>
          <td>
            <span class={{if event.long_delay 'text-muted'}}>
              {{seconds_ago event.delay}}
            </span>
          </td>
          <td>
            {{#if event.new_board}}
              {{#link-to 'board' event.new_board.key}}
                {{event.new_board.key}}
              {{/link-to}}
            {{else}}
              {{#if event.board}}
                {{#link-to 'board' event.board.key class='text-muted'}}
                  {{event.board.key}}
                {{/link-to}}
              {{/if}}
            {{/if}}
          </td>
          <td style="text-align: right;">
            {{#if event.note_count}}
              <a href="#" {{action 'toggle_notes' event.id}}><span class="label label-primary">{{event.note_count}}</span></a>
            {{/if}}
            <button {{action 'toggle_notes' event.id 'add'}} class='btn btn-default btn-sm' style="margin: -8px 0 -6px 5px;">
              <span class='glyphicon glyphicon-plus'></span>
              <span class='sr-only'>{{t "add comment" key='add_comment'}}</span>
            </button>
          </td>
        </tr>
        {{#if event.show_notes}}
          <tr>
            <td colspan="5" style="padding-left: 50px;">
              Notes:<br/>
              {{#each event.notes as |note|}}
                <div>
                  {{#link-to 'user' note.author.user_name}}
                    {{note.author.user_name}}
                  {{/link-to}} -
                  {{note.note}}
                </div>
              {{/each}}
              <form class="form-inline" style="margin-top: 15px;" {{action 'add_note' event.id}}>
                <div class="form-group">
                  <input type="text" class="form-control input-sm" data-event_id={{event.id}} placeholder="note text"/>
                </div>
                <div class="form-group">
                  <button type="submit" class='btn btn-default btn-sm'>{{t "Save" key='save'}}</button>
                </div>
              </form>
            </td>
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  </table>
</div>
<button class='btn btn-default'>{{t "More" key='more'}}</button>
<button class='btn btn-default'>{{t "New Note" key='new_note'}}</button>
<button class='btn btn-default'>{{t "Quick Assessment" key='quick_assessment'}}</button>