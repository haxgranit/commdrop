{{#opening-observer opening='opening_index' closing='closing_index'}}{{/opening-observer}}
<div id="index_view" class={{if app_state.currentUser "row main_columns" "row"}}>
  {{#if app_state.currentUser}}
    {{#if app_state.currentUser.preferences.new_index}}
      {{partial 'index/authenticated-new'}}
    {{else}}
      {{partial 'index/authenticated'}}
    {{/if}}
  {{else}}
    {{partial 'index/unauthenticated'}}
  {{/if}}
</div>
{{#if app_state.login_modal}}
  <div id="login_overlay">
    <div style="text-align: center; margin-bottom: 30px;">
      <img src={{path 'images/logo-big.png'}} style="width: 100px;"/>
    </div>
    {{#unless app_state.no_linky}}
      <div class="row" style="margin-bottom: 10px;">
        <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
          <a href="#" {{action 'hide_login'}} class='btn btn-default' style="width: 100%;">{{t "New to CoughDrop? Find out more." key='learn_more'}}</a>
        </div>
      </div>
    {{/unless}}
    {{login-form set_overflow=true}}
  </div>
{{/if}}