{{#if true}}
  {{#modal-dialog action="close" opening='opening' closing='closing'}}
    <div class="modal-header">
      <button type="button" class="close" {{action 'close'}}>&times;</button>
      <h3>{{t "External Link" key='external_link'}}</h3>
    </div>
    <div class="modal-body">
      <p>
        {{ model.url }}
      </p>
      <p>
        {{t "This button is configured to open the listed web page in a new browser tab. Do you want to continue?" key='open_in_new_tab'}}
      </p>
    </div>
    <div class="modal-footer">
      <button class='btn btn-primary btn-lg' {{action 'open_link'}}>{{t "Open the Link" key='open_link'}}</button>
      <button class='btn btn-default btn-lg' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
    </div>
  {{/modal-dialog}}
{{else}}
  {{#modal-dialog full_stretch=true  action="close" opening='opening' closing='closing'}}
    <div class="modal-body">
      <div class="book_box">
        <iframe src={{model.url}} id="book_preview" frameborder="0" sandbox="allow-pointer-lock allow-popups allow-forms allow-same-origin allow-scripts allow-top-navigation"></iframe>
      </div>
      <p style="margin-top: 10px; margin-bottom: -5px;">
        <button class='btn btn-default btn-lg' {{action 'close'}}>{{t "Close" key='close'}}</button>
        <button class='btn btn-default btn-lg' {{action 'open_link'}}>{{t "Open in a Browser Tab" key='open_link'}}</button>
      </p>
    </div>
  {{/modal-dialog}}
{{/if}}