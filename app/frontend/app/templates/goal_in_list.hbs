<div class='well goal'>
  {{#link-to 'user.goal' model.user_name goal.id class='summary'}}
    {{goal.summary}}
  {{/link-to}}
  {{#if goal.template}}
    {{t "(template)" key='template_paren'}}
  {{/if}}
  <div style='float: right;'>
    {{#if goal.active}}
      <span style='margin-right: 15px;'>
        <button {{action 'new_note' goal}} class='btn btn-lg btn-default' title={{t "new note" key='new_note'}}><span class='glyphicon glyphicon-file'></span><span class='sr-only'>{{t "new note" key='new_note'}}</span></button>
        <button {{action 'quick_assessment' goal}} class='btn btn-lg btn-default' title={{t "quick assessment" key='quick_assessment'}}><span class='glyphicon glyphicon-list-alt'></span><span class='sr-only'>{{t "quick assessment" key='quick_assessment'}}</span></button>
      </span>
      {{#if goal.primary}}
        <button {{action 'update' goal 'primary' 'off'}} class='btn btn-lg btn-default' title={{t "make secondary goal" key='make_secondary_goal'}}><span class='glyphicon glyphicon-hand-down'></span><span class='sr-only'>{{t "make secondary goal" key='make_secondary_goal'}}</span></button>
      {{else}}
        <button {{action 'update' goal 'primary' 'on'}} class='btn btn-lg btn-default' title={{t "make primary goal" key='make_primary_goal'}}><span class='glyphicon glyphicon-hand-up'></span><span class='sr-only'>{{t "make primary goal" key='make_primary_goal'}}</span></button>
      {{/if}}
      <button {{action 'delete' goal}} class='btn btn-lg btn-default' title={{t "retire goal" key='retire_goal'}}><span class='glyphicon glyphicon-remove'></span><span class='sr-only'>{{t "retire goal" key='retire_goal'}}</span></button>
    {{else}}
      <button {{action 'update' goal 'active' 'on'}} class='btn btn-lg btn-default' title={{t "restore goal" key='restore_goal'}}><span class='glyphicon glyphicon-arrow-up'></span><span class='sr-only'>{{t "restore goal" key='restore_goal'}}</span></button>
      <button {{action 'delete' goal}} class='btn btn-lg btn-default' title={{t "delete goal" key='delete_goal'}}><span class='glyphicon glyphicon-trash'></span><span class='sr-only'>{{t "delete goal" key='delete_goal'}}</span></button>
    {{/if}}
  </div>
  <div class='details'>
    {{#if goal.active}}
      {{date_ago goal.started}}
    {{else}}
      {{date_ago goal.ended}}
    {{/if}}
  </div>
  <div class='description text-muted'>
    {{goal.description}}
  </div>
</div>