{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Share Message" key='share_message'}}</h3>
  </div>
  <div class="modal-body">
    <p>
      <img src={{model.user.avatar_url}} style="height: 50px; max-width: 100px;"/>
      {{t "The following message will be sent to <strong>%{sup}</strong>:" key='user_notification_explanation' sup=model.user.user_name}}
    </p>

    <div class="well">
      {{model.utterance.sentence}}
    </div>

    <div class="row">
      <div class="col-sm-10">
        {{#if loading}}
          <p>{{t "Sending Message..." key='sending_message'}}</p>
        {{else}}
          <button class='btn btn-lg btn-primary' {{action 'confirm'}}>{{t "Send Message" key='send_message'}}</button>
          <button class='btn btn-lg btn-default' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
        {{/if}}
        {{#if error}}
          <p class='text-danger'>{{t "There was an unexpected problem sending the message" key='error_sending_message'}}</p>
        {{/if}}
      </div>
    </div>
  </div>
{{/modal-dialog}}
