{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>
      {{t "Importing Recordings" key='importing_recordings'}}
    </h3>
  </div>
  <div class="modal-body">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-value={{num_percent}} aria-valuemin="0" aria-valuemax="100" style={{num_style}}>
        <span class="sr-only">
          {{t "%{pct}% Complete" key='percent_complete' pct=num_percent}}
        </span>
      </div>
    </div>
    <p>
      <img src="{{path 'images/spinner.gif'}}" style="float: left; padding-right: 15px;"/>
      {{#if model.status.errored}}
        {{t "There was an error importing your recordings. Please make sure you uploaded a valid file and try again." key='bad_recordings_import'}}
      {{else}}
        {{#if model.status.finished}}
          {{t "Import finished!" key='import_board_finished'}}
        {{else}}
          {{t "Importing recordings, this could take a few minutes..." key='importing_recordings_please_wait'}}
        {{/if}}
      {{/if}}
    </p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" {{action 'close'}}>{{t "Close" key='close'}}</a>
  </div>
{{/modal-dialog}}
